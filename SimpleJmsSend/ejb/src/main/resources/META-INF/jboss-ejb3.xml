<jboss:ejb-jar xmlns:jboss="http://www.jboss.com/xml/ns/javaee"
               xmlns="http://java.sun.com/xml/ns/javaee"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns:r="urn:resource-adapter-binding"
               xmlns:p="urn:ejb-pool:1.0"
               xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee http://www.jboss.org/j2ee/schema/jboss-ejb3-2_0.xsd http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
               version="3.1"
               impl-version="2.0">

    <jboss:enterprise-beans>
        <session>
            <ejb-name>JmsSendAndForgetService</ejb-name>
            <ejb-class>com.softwareaggov.messaging.simplejmssendoneway.ejb.publish.JmsSendAndForgetBean
            </ejb-class>
            <resource-ref>
                <res-ref-name>jms/someManagedCF</res-ref-name>
                <res-type>javax.jms.QueueConnectionFactory</res-type>
                <jndi-name>java:/jms/${JmsSend.JmsSendAndForgetService.Resources.ConnectionFactory.BindingName}</jndi-name>
            </resource-ref>
            <resource-ref>
                <res-ref-name>jms/someManagedDestination</res-ref-name>
                <res-type>com.sun.genericra.outbound.QueueProxy</res-type>
                <jndi-name>java:/jms/${JmsSend.JmsSendAndForgetService.Resources.Destination.BindingName}</jndi-name>
            </resource-ref>
        </session>
        <session>
            <ejb-name>JmsSendAndWaitService</ejb-name>
            <ejb-class>com.softwareaggov.messaging.simplejmssendoneway.ejb.publish.JmsSendAndWaitBean
            </ejb-class>
            <resource-ref>
                <res-ref-name>jms/someManagedCF</res-ref-name>
                <res-type>javax.jms.QueueConnectionFactory</res-type>
                <jndi-name>java:/jms/${JmsSend.JmsSendAndWaitService.Resources.ConnectionFactory.BindingName}</jndi-name>
            </resource-ref>
            <resource-ref>
                <res-ref-name>jms/someManagedDestination</res-ref-name>
                <res-type>com.sun.genericra.outbound.QueueProxy</res-type>
                <jndi-name>java:/jms/${JmsSend.JmsSendAndWaitService.Resources.Destination.BindingName}</jndi-name>
            </resource-ref>
        </session>
        <session>
            <ejb-name>JmsSendAndForgetCachedConnectionTestService</ejb-name>
            <ejb-class>
                com.softwareaggov.messaging.simplejmssendoneway.ejb.publish.compareTests.JmsSendAndForgetCachedConnectionTestBean
            </ejb-class>
            <resource-ref>
                <res-ref-name>jms/someManagedCF</res-ref-name>
                <res-type>javax.jms.QueueConnectionFactory</res-type>
                <jndi-name>java:/jms/${JmsSend.JmsSendAndForgetCachedConnectionTestService.Resources.ConnectionFactory.BindingName}</jndi-name>
            </resource-ref>
            <resource-ref>
                <res-ref-name>jms/someManagedDestination</res-ref-name>
                <res-type>com.sun.genericra.outbound.QueueProxy</res-type>
                <jndi-name>java:/jms/${JmsSend.JmsSendAndForgetCachedConnectionTestService.Resources.Destination.BindingName}</jndi-name>
            </resource-ref>
        </session>
    </jboss:enterprise-beans>
    <assembly-descriptor>
        <r:resource-adapter-binding>
            <ejb-name>*</ejb-name>
            <r:resource-adapter-name>umra.rar</r:resource-adapter-name>
        </r:resource-adapter-binding>
        <p:pool>
            <ejb-name>*</ejb-name>
            <p:bean-instance-pool-ref>umra-strict-max-pool</p:bean-instance-pool-ref>
        </p:pool>
    </assembly-descriptor>
</jboss:ejb-jar>