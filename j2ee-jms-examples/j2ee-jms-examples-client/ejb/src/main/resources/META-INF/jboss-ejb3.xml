<?xml version="1.1" encoding="UTF-8"?>
<jboss:ejb-jar xmlns:jboss="http://www.jboss.com/xml/ns/javaee"
               xmlns="http://java.sun.com/xml/ns/javaee"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns:r="urn:resource-adapter-binding"
               xmlns:p="urn:ejb-pool:1.0"
               xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee http://www.jboss.org/j2ee/schema/jboss-ejb3-2_0.xsd http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
               version="3.1"
               impl-version="2.0">

    <jboss:enterprise-beans>
        <session>
            <ejb-name>JmsManagedSimplePublisherBean</ejb-name>
            <ejb-class>com.softwareaggov.messaging.service.publish.JmsManagedSimplePublisherBean</ejb-class>
            <resource-ref>
                <res-ref-name>jms/someManagedCF</res-ref-name>
                <res-type>javax.jms.QueueConnectionFactory</res-type>
                <jndi-name>java:/jms/SAGUMRAQueueConnectionFactory</jndi-name>
            </resource-ref>
            <resource-ref>
                <res-ref-name>jms/someManagedSimpleDestination</res-ref-name>
                <res-type>com.sun.genericra.outbound.QueueProxy</res-type>
                <jndi-name>java:/jms/SAGUMSimpleQueue</jndi-name>
            </resource-ref>
        </session>
        <session>
            <ejb-name>JmsManagedSimpleCachedPublisherBean</ejb-name>
            <ejb-class>com.softwareaggov.messaging.service.publish.JmsManagedSimpleCachedPublisherBean</ejb-class>
            <resource-ref>
                <res-ref-name>jms/someManagedCF</res-ref-name>
                <res-type>javax.jms.QueueConnectionFactory</res-type>
                <jndi-name>java:/jms/SAGUMRAQueueConnectionFactory</jndi-name>
            </resource-ref>
            <resource-ref>
                <res-ref-name>jms/someManagedSimpleDestination</res-ref-name>
                <res-type>com.sun.genericra.outbound.QueueProxy</res-type>
                <jndi-name>java:/jms/SAGUMSimpleQueue</jndi-name>
            </resource-ref>
        </session>
        <session>
            <ejb-name>JmsManagedRequestReplyPublisherBean</ejb-name>
            <ejb-class>com.softwareaggov.messaging.service.publish.JmsManagedRequestReplyPublisherBean</ejb-class>
            <resource-ref>
                <res-ref-name>jms/someManagedCF</res-ref-name>
                <res-type>javax.jms.QueueConnectionFactory</res-type>
                <jndi-name>java:/jms/SAGUMRAQueueConnectionFactory</jndi-name>
            </resource-ref>
            <resource-ref>
                <res-ref-name>jms/someManagedRequestDestination</res-ref-name>
                <res-type>com.sun.genericra.outbound.QueueProxy</res-type>
                <jndi-name>java:/jms/SAGUMRequestQueue</jndi-name>
            </resource-ref>
        </session>
        <session>
            <ejb-name>JmsManagedRequestReplyCachedPublisherBean</ejb-name>
            <ejb-class>com.softwareaggov.messaging.service.publish.JmsManagedRequestReplyCachedPublisherBean</ejb-class>
            <resource-ref>
                <res-ref-name>jms/someManagedCF</res-ref-name>
                <res-type>javax.jms.QueueConnectionFactory</res-type>
                <jndi-name>java:/jms/SAGUMRAQueueConnectionFactory</jndi-name>
            </resource-ref>
            <resource-ref>
                <res-ref-name>jms/someManagedRequestDestination</res-ref-name>
                <res-type>com.sun.genericra.outbound.QueueProxy</res-type>
                <jndi-name>java:/jms/SAGUMRequestQueue</jndi-name>
            </resource-ref>
        </session>

        <message-driven>
            <ejb-name>SimpleQueueConsumerBean</ejb-name>
            <ejb-class>com.softwareaggov.messaging.service.subscribe.SimpleQueueConsumerBean</ejb-class>
            <activation-config>
                <activation-config-property>
                    <activation-config-property-name>destinationJndiName</activation-config-property-name>
                    <activation-config-property-value>IRS/EAIB/ReqReply/SimpleTestQueue</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>destinationType</activation-config-property-name>
                    <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>connectionFactoryJndiName</activation-config-property-name>
                    <activation-config-property-value>JBOSSSubQCF</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>batchSize</activation-config-property-name>
                    <activation-config-property-value>${mdb.SimpleQueueConsumerBean.activationspecs.batchSize:1}</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>maxPoolSize</activation-config-property-name>
                    <activation-config-property-value>${mdb.SimpleQueueConsumerBean.activationspecs.maxPoolSize:8}</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>maxWaitTime</activation-config-property-name>
                    <activation-config-property-value>300</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>redeliveryAttempts</activation-config-property-name>
                    <activation-config-property-value>50</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>redeliveryInterval</activation-config-property-name>
                    <activation-config-property-value>1</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>reconnectAttempts</activation-config-property-name>
                    <activation-config-property-value>50</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>reconnectInterval</activation-config-property-name>
                    <activation-config-property-value>1</activation-config-property-value>
                </activation-config-property>
            </activation-config>
            <env-entry>
                <env-entry-name>mockSleepTimeInMillis</env-entry-name>
                <env-entry-type>java.lang.Long</env-entry-type>
                <env-entry-value>${mdb.SimpleQueueConsumerBean.mockSleepTimeInMillis:0}</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>mockExceptionsCountInterval</env-entry-name>
                <env-entry-type>java.lang.Integer</env-entry-type>
                <env-entry-value>${mdb.SimpleQueueConsumerBean.mockExceptionsCountInterval:0}</env-entry-value>
            </env-entry>
        </message-driven>
        <message-driven>
            <ejb-name>ResponseQueueConsumerBean</ejb-name>
            <ejb-class>com.softwareaggov.messaging.service.subscribe.ResponseQueueConsumerBean</ejb-class>
            <activation-config>
                <activation-config-property>
                    <activation-config-property-name>destinationJndiName</activation-config-property-name>
                    <activation-config-property-value>IRS/EAIB/ReqReply/ResponseQueue</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>destinationType</activation-config-property-name>
                    <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>connectionFactoryJndiName</activation-config-property-name>
                    <activation-config-property-value>JBOSSSubQCF</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>batchSize</activation-config-property-name>
                    <activation-config-property-value>${mdb.ResponseQueueConsumerBean.activationspecs.batchSize:1}</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>maxPoolSize</activation-config-property-name>
                    <activation-config-property-value>${mdb.ResponseQueueConsumerBean.activationspecs.maxPoolSize:8}</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>maxWaitTime</activation-config-property-name>
                    <activation-config-property-value>300</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>redeliveryAttempts</activation-config-property-name>
                    <activation-config-property-value>50</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>redeliveryInterval</activation-config-property-name>
                    <activation-config-property-value>1</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>reconnectAttempts</activation-config-property-name>
                    <activation-config-property-value>50</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>reconnectInterval</activation-config-property-name>
                    <activation-config-property-value>1</activation-config-property-value>
                </activation-config-property>
            </activation-config>
            <env-entry>
                <env-entry-name>mockSleepTimeInMillis</env-entry-name>
                <env-entry-type>java.lang.Long</env-entry-type>
                <env-entry-value>${mdb.ResponseQueueConsumerBean.mockSleepTimeInMillis:0}</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>mockExceptionsCountInterval</env-entry-name>
                <env-entry-type>java.lang.Integer</env-entry-type>
                <env-entry-value>${mdb.ResponseQueueConsumerBean.mockExceptionsCountInterval:0}</env-entry-value>
            </env-entry>
        </message-driven>
    </jboss:enterprise-beans>
    <assembly-descriptor>
        <r:resource-adapter-binding>
            <ejb-name>*</ejb-name>
            <r:resource-adapter-name>umra.rar</r:resource-adapter-name>
        </r:resource-adapter-binding>
        <p:pool>
            <ejb-name>*</ejb-name>
            <p:bean-instance-pool-ref>umra-strict-max-pool</p:bean-instance-pool-ref>
        </p:pool>
    </assembly-descriptor>
</jboss:ejb-jar>